{
  "name": "nest-server",
  "version": "1.0.0",
  "description": "Nest REST API",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p",
    "dev": "nodemon",
    "start": "node dist/main.js",
    "test:watch": "jest --watch",
    "test": "jest --detectOpenHandles --forceExit",
    "format": "prettier --write '**/*.{js,json,ts}'",
    "tscheck": "tsc --noEmit --pretty",
    "lint": "eslint --cache --fix './src/**/*.{js,json,ts}'",
    "migration:create": "ts-node node_modules/.bin/typeorm migration:create",
    "migration:run": "ts-node node_modules/.bin/typeorm migration:run",
    "migration:revert": "ts-node node_modules/.bin/typeorm migration:revert"
  },
  "author": "Sebastian Matias Segura (@seb7887)",
  "license": "ISC",
  "devDependencies": {
    "@nestjs/testing": "^6.11.6",
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/express-rate-limit": "^5.0.0",
    "@types/helmet": "0.0.46",
    "@types/jest": "^25.1.2",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/luxon": "^1.21.0",
    "@types/node": "^13.7.0",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@nestjs/common": "^6.11.6",
    "@nestjs/core": "^6.11.6",
    "@nestjs/platform-express": "^6.11.6",
    "@nestjs/swagger": "^4.2.6",
    "@nestjs/typeorm": "^6.2.0",
    "bcrypt": "^3.0.8",
    "class-validator": "^0.11.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^5.1.3",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "luxon": "^1.22.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^7.18.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.3",
    "typeorm": "^0.2.22"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run tscheck"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,json,ts,md}": "prettier --write"
  }
}
